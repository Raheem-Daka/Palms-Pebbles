{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Set-Cookie",
          "value": "myCookie=myValue; SameSite=None; Secure; path=/; expires=Thu, 31 Dec 2026 23:59:59 GMT"
        }
      ]
    }
  ]
}