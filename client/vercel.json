{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }   // ‚Üê Optional but explicit (matches your vite.config.js)
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",                // "source" is the preferred modern key (but "src" works)
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Set-Cookie",
          "value": "myCookie=myValue; SameSite=None; Secure; Path=/; Expires=Thu, 31 Dec 2026 23:59:59 GMT"
        }
      ]
    }
  ]
}