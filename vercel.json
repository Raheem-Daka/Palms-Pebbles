{
    "version": 2,
    "framework": "vite",
    "rootDirectory": "client",
    "outputDirectory": "dist",
    "builds": [
        {
            "src": "app.jsx",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "handle": "filesystem"
          },
        {
            "source": "/(.*)",
            "destination": "index.html"
        }
    ]
}